{
	"name": "TransformJollyGoodSales",
	"properties": {
		"folder": {
			"name": "Chapter7"
		},
		"type": "MappingDataFlow",
		"typeProperties": {
			"sources": [
				{
					"dataset": {
						"referenceName": "Blob_Excel",
						"type": "DatasetReference"
					},
					"name": "JollyGoodSales"
				},
				{
					"linkedService": {
						"referenceName": "JSON",
						"type": "LinkedServiceReference"
					},
					"name": "ExchangeRates"
				}
			],
			"sinks": [],
			"transformations": [
				{
					"name": "Filter"
				},
				{
					"name": "RatesToUSD"
				}
			],
			"scriptLines": [
				"source(output(",
				"          Period as date,",
				"          Product as string,",
				"          {Unit Price} as double,",
				"          Currency as string,",
				"          {Units Sold} as integer",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     ignoreNoFilesFound: false) ~> JollyGoodSales",
				"source(output(",
				"          FromCurrency as string,",
				"          ToCurrency as string,",
				"          Date as date,",
				"          ExchangeRate as double",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     ignoreNoFilesFound: false,",
				"     format: 'excel',",
				"     container: 'exchangerates',",
				"     fileName: 'ExchangeRates.xlsx',",
				"     sheetName: 'Sheet1',",
				"     firstRowAsHeader: true) ~> ExchangeRates",
				"JollyGoodSales filter(Product != 'Month Total') ~> Filter",
				"ExchangeRates filter(ToCurrency == 'USD') ~> RatesToUSD"
			]
		}
	}
}